@page "/"
@using Microsoft.AspNetCore.Components.Web

<PageTitle>Welcome to Healing Paws Veterinary Clinic</PageTitle>

<div class="container mt-5">
    <!-- Header Section -->
    <header class="text-center mb-4">
        <h1 class="display-4">Welcome to Healing Paws Veterinary Clinic</h1>
        <p class="lead">Your trusted partner in pet care and appointment scheduling.</p>
    </header>

    <!-- Main Content Section -->
    <div class="justify-content-center row">
        <!-- Image Section -->
        <div class="col-md-5 mx-2">
            <img src="images/clinic.jpg" alt="Healing Paws Clinic" class="img-fluid rounded shadow-sm">
        </div>

        <!-- Description Section -->
        <div class="align-content-center col-md-5 mx-2">
            <h5><b>Manage Your Appointments Easily</b></h5>
            <p>
                At Healing Paws Veterinary Clinic, we understand the importance of your pet's health. Whether you need to schedule a routine check-up, vaccination, or urgent visit, our user-friendly interface makes it easy to book, reschedule, or cancel appointments.
            </p>
            <p>
                Enjoy the convenience of online appointment management, with timely reminders and all the information you need at your fingertips. Explore our features and experience hassle-free pet care with just a few clicks.
            </p>
            <a href="appointments" class="btn btn-danger">View Appointments</a>
        </div>

    </div>
</div>
